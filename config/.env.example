# HandyOsint Environment Configuration
# Copy to .env and modify values

# Application Settings
APP_ENV=production
LOG_LEVEL=INFO
DEBUG=false

# Database Settings
DB_PATH=./data/social_scan.db
DB_BACKUP_DIR=./backups

# Scanner Settings
MAX_CONCURRENT_REQUESTS=5
REQUEST_TIMEOUT=30
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36

# Export Settings
EXPORT_DIR=./exports
REPORT_DIR=./reports

# UI Settings
UI_COLORS=true
UI_ANIMATIONS=true
UI_THEME=16bit_green
